@model WebPortal.Models.CreateModel

@{
    ViewBag.Title = "Register";
    Layout = null;
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<title>@ViewBag.Title - AHMC Portal</title>
<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<link href="~/Content/hover.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 text">
                    <br /><br />
                    <img src="~/Images/ahmc_logo.png" />
                    <br />
                    <br />
                    <br />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 form-box">
                    <div class="form-bottom">
                        @Html.ValidationSummary(false)
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(a => a.UserName, new { @placeholder = "Employee Number", @class = "input-size inputstyle" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(a => a.Password, new { @placeholder = "Password", @class = "input-size inputstyle" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(a => a.ConfirmPassword, new { @placeholder = "Password", @class = "input-size inputstyle" })
                            </div>
                            <br />
                            <button type="submit" class="btn-sm btn-primary" onclick="location.href='@Url.Action("RegisterDoc", "Register")'">Register</button>
                            <button type="button" class="btn-sm btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Cancel</button>
                        }
                        <br />
                        <br />
                        <div class="col-lg-6">
                            @Html.ActionLink("Already Registered ?", "Login", "Account", null, new { @style = "color:#9a9a9a;font-size:14px;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>