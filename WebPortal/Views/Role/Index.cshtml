@using WebPortal.Models;
@model IEnumerable<roles>
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>@ViewBag.Title - Roles</title>
<div>
    <div class="panel-success">
        <div class="panel-heading">
            <div class="panel-title">Roles</div>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <tr>
                    <th>Role ID</th>
                    <th>Role</th>
                    @*<th>Users</th>*@
                    <th></th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr><td class="text-center">No Roles</td></tr>
                }
                else
                {
                    foreach (roles role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            @*<td>
                                @if (role.Users == null || role.Users.Count == 0)
                                { 
                                    @: No Users in Role
                                }
                                else
                                { 
                                    <p>@string.Join(", ", role.Users.Select(x => Html.GetUserName(x.UserId)))</p>
                                }
                            </td>*@
                            <td>
                                @using (Html.BeginForm("Delete", "Role", new { id = role.Id }))
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = role.Id }, new { @class = "btn btn-primary btn-xs" })
                                    <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                                }
                        </td>
                    </tr>
                    }
                }
            </table>
        </div>
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

