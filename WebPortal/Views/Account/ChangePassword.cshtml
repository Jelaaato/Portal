@model WebPortal.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
    Layout = null;
}
<!DOCTYPE html>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>@ViewBag.Title - AHMC Portal</title>
<link href="~/Content/hover.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/html5shiv.min.js"></script>
<script src="~/Scripts/respond.js"></script>
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 text">
                    <br /><br />
                    <img src="~/Images/Logo/ahmc_logo.png" />
                    <br />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 form-box">
                    <div class="form-bottom">
                        @Html.ValidationSummary(false)
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken();
                            <br />
                            <br />
                            <div class="form-group">
                                @Html.PasswordFor(m => m.OldPassword, new { @placeholder = "Current Password", @class = "input-size inputpass", autocomplete = "off" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.NewPassword, new { @placeholder = "New Password", @class = "input-size inputpass", autocomplete = "off"})
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm New Password", @class = "input-size inputpass", autocomplete = "off"})
                            </div>
                            <button type="submit" class="btn btn-login" onclick="location.href='@Url.Action("ChangePassword", "Account")'">Continue</button>
                            
                            <br />
                            <br />
                            <div class="col-lg-6">
                                @Html.ActionLink("Back to Home", "Index", "AHMC", null, new { @style = "color:#9a9a9a;font-size:14px;" })
                            </div>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>