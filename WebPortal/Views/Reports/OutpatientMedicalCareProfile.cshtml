@model WebPortal.Models.OPSViewModel
@{
    ViewBag.Title = "OutpatientMedicalCareProfile";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

@section reports{
    <section>
        <center>
            <div class="jumbotron jumbotron-margin-top" style="background-color:#F9FAFC">
                <img src="~/Images/Reports_icons/reports_nobox.png" width="197" height="259" class="sidebar-results-img"/>
                <div class="sidebar-main-text">Reports</div>
                <br />
                <div class="sidebar-sub-text">Generate patient's medical records.</div>
            </div>
        </center>
    </section>
}

<div class="panel-group">
    <img src="~/Images/Reports_icons/omcp_text.png" style="width:100%;height:25%;" />
        <div>
            <br />
            @using (Html.BeginForm("OutpatientMedicalCareProfile", "Reports", FormMethod.Get))
            {
                <div class="form-inline">
                    <div class=" form-group">
                        @Html.TextBox("search", ViewBag.CurrentFilter as String, new { @placeholder = "Enter Hospital Number", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input class="btn btn-success" type="submit" value="Search" />
                    </div>
                </div>
            }
        </div>
   <div class="panel panel-default">
       <div class="panel-heading">
           <h3>Patient's Allergies</h3>
       </div>
       <div class="panel-body">
           @if (ViewBag.Successful == "true")
           {
               @Html.Partial("_patallergy", Model.patient_allergies)
           }
           else
           {
               <h4 style="padding:5px;">No records found.</h4>
           }
       </div>
   </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Patient's Medications</h3>
        </div>
        <div class="panel-body">
            @if (ViewBag.Successful == "true")
            {
                @Html.Partial("_patmedic", Model.patient_medication)
            }
            else
            {
                <h4 style="padding:5px;">No records found.</h4>
            }
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Patient's Diagnosis</h3>
        </div>
        <div class="panel-body">
            @if (ViewBag.Successful == "true")
            {
                @Html.Partial("_patdiag", Model.patient_diagnosis)
            }
            else
            {
                <h4 style="padding:5px;">No records found.</h4>
            }
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Previous Surgeries</h3>
        </div>
        <div class="panel-body">
            @if (ViewBag.Successful == "true")
            {
                @Html.Partial("_prevsurg", Model.patient_prev_surgeries)
            }
            else
            {
                <h4 style="padding:5px;">No records found.</h4>
            }
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Previous Hospitalizations</h3>
        </div>
        <div class="panel-body">
            @if (ViewBag.Successful == "true")
            {
                @Html.Partial("_prevhosp", Model.patient_prev_hosp)
            }
            else
            {
                <h4 style="padding:5px;">No records found.</h4>
            }
        </div>
    </div>
</div>

