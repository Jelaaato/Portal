@*@model WebPortal.Models.OPSViewModel*@
@model PagedList.IPagedList<WebPortal.Models.webportal_patient_allergies_new>
@using PagedList.Mvc;
@using PagedList;

<div id="tbl-wrapper1">

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr style="background-color:rgba(98,151,239,0.8);color:white;">
                <th style="text-align:center;">Allergen</th>
                <th style="text-align:center;">Allergy Status</th>
                <th style="text-align:center;">Adverse Reaction</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><h5>@Html.DisplayFor(model => item.cause)</h5></td>
                    <td><h5> @Html.DisplayFor(model => item.reaction_cause_status)</h5></td>
                    <td><h5>@Html.DisplayFor(model => item.reaction)</h5></td>
                </tr>
            }
        </tbody>
    </table>
            
    <center>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("OMCPpatientAllergy", new { page, currentfilter = ViewBag.CurrentFilter }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
        new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "tbl-wrapper1"
        }))
    </center>

</div>
    
 