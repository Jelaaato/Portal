@*@model WebPortal.Models.OPSViewModel*@
@model PagedList.IPagedList<WebPortal.Models.webportal_patient_prev_hospitalization>
@using PagedList.Mvc;
@using PagedList;

<div id="tbl-wrapper4">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr style="background-color:rgba(98,151,239,0.8);color:white;">
                <th style="text-align:center;">Visit Date</th>
                <th style="text-align:center;">Visit Type</th>
                <th style="text-align:center;">Primary Service</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><h5>@Html.DisplayFor(model => item.visit_start_date_time)</h5></td>
                    <td><h5> @Html.DisplayFor(model => item.visit_type)</h5></td>
                    <td><h5>@Html.DisplayFor(model => item.primary_service)</h5></td>
                </tr>
            }
        </tbody>
    </table>

    <center>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("OMCPpatientPrevHosp", new { page, currentfilter = ViewBag.CurrentFilter }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                new AjaxOptions()
                {
                    HttpMethod = "GET",
                    UpdateTargetId = "tbl-wrapper4"
                }))
    </center>

</div>




        
  