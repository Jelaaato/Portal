<div class="row">
        @foreach (var item in Model)
        {
            <br />
        <center>
        <div class="col-lg-3">
            <img src="~/Images/Reports_icons/user-icon.png" width="110" height="110" />
        </div>
        <div class="col-lg-5" style="text-align:justify;">
            <h4>Patient Name :&nbsp;&nbsp;&nbsp;<b>@item.last_name_l , @item.first_name_l @item.middle_name_l</b></h4>
            <h4>Hospital Number :&nbsp;&nbsp;&nbsp;@item.hospital_nr</h4>
            <h4>Birthday :&nbsp;&nbsp;&nbsp;@item.date_of_birth.Value.ToString("dd MMMM yyyy")</h4>
        </div>
        <div class="col-lg-2">
            <h4>Age :&nbsp;&nbsp;&nbsp;@item.age y.o</h4>
            <h4>Gender :&nbsp;&nbsp;&nbsp;@item.gender</h4>
        </div>
        </center>
        }
        <a href="#pdf" data-toggle="modal">Generate PDF</a>
        <div class="modal fade" id="pdf" role="dialog" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" data-toggle="tooltip" title="Close">&times;</button>
                    </div>
                    <div class="modal-body">
                        <embed src ="@Url.Action("GenerateOMCPPDF")" width="870" height="1000" type="application/pdf"/>
                    </div>
                </div>
            </div>
        </div>
    @*@Html.ActionLink("Generate PDF", "GenerateOMCPPDF", "Reports", new { target = "_blank"})*@
</div>
